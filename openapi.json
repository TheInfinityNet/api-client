  "components": {
    "schemas": {
      "CommonMessageResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Gender": {
        "enum": ["Male", "Female", "Other"],
        "type": "string"
      },
      "RefreshRequest": {
        "required": ["refreshToken"],
        "type": "object",
        "properties": {
          "refreshToken": {
            "minLength": 1,
            "type": "string",
            "description": "The refresh token required for generating a new access token"
          }
        },
        "additionalProperties": false,
        "description": "DTO for refreshing a token"
      },
      "RefreshResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          },
          "accessToken": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ResetByCodeRequest": {
        "type": "object",
        "properties": {
          "newPassword": {
            "type": "string",
            "nullable": true
          },
          "confirmPassword": {
            "type": "string",
            "nullable": true
          },
          "code": {
            "type": "string",
            "nullable": true
          },
          "acceptTerms": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "ResetByTokenRequest": {
        "type": "object",
        "properties": {
          "newPassword": {
            "type": "string",
            "nullable": true
          },
          "confirmPassword": {
            "type": "string",
            "nullable": true
          },
          "acceptTerms": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "SendMailRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "type": {
            "$ref": "#/components/schemas/VerificationType"
          }
        },
        "additionalProperties": false
      },
      "SendMailResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          },
          "retryAfter": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "SignInRequest": {
        "required": ["email", "password"],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "maxLength": 20,
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "SignInResponse": {
        "type": "object",
        "properties": {
          "tokens": {
            "$ref": "#/components/schemas/TokensResponse"
          },
          "user": {
            "$ref": "#/components/schemas/UserProfileResponse"
          }
        },
        "additionalProperties": false
      },
      "SignUpRequest": {
        "required": [
          "email",
          "firstName",
          "lastName",
          "mobileNumber",
          "password",
          "passwordConfirmation"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "middleName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "maxLength": 100,
            "minLength": 1,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "maxLength": 20,
            "minLength": 6,
            "type": "string"
          },
          "passwordConfirmation": {
            "maxLength": 20,
            "minLength": 6,
            "type": "string"
          },
          "mobileNumber": {
            "minLength": 1,
            "type": "string",
            "format": "tel"
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "gender": {
            "$ref": "#/components/schemas/Gender"
          },
          "acceptTerms": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TokensResponse": {
        "type": "object",
        "properties": {
          "accessToken": {
            "type": "string",
            "nullable": true
          },
          "refreshToken": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "UserProfileResponse": {
        "type": "object",
        "properties": {
          "accountId": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "username": {
            "type": "string",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "middleName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "mobileNumber": {
            "type": "string",
            "nullable": true
          },
          "birthdate": {
            "type": "string",
            "format": "date-time"
          },
          "gender": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "VerificationType": {
        "enum": [
          "VerifyByCode",
          "VerifyByToken",
          "ResetByCode",
          "ResetByToken"
        ],
        "type": "string"
      },
      "VerifyEmailByCodeRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "code": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "apiKey",
        "description": "JWT Authorization header using the Bearer scheme. \r\n\r\n Enter 'Bearer' [space] and then your token in the text input below.\r\n\r\nExample: \"Bearer 12345abcdef\"",
        "name": "Authorization",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ]
}
